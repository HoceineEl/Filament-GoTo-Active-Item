    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "HoceineEl\\GotoActiveItem\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Hoceine El Idrissi",
            "email": "contact@hoceine.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "filament/support": "^3.0",
        "filament/filament": "^3.0",
        "laravel/framework": "^10.0 || ^11.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "HoceineEl\\GotoActiveItem\\FilamentGotoActiveItemProvider"
            ]
        }
    }
